{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "chatterbox-tts-web",
  "variables": {
    "PYTHONPATH": "/app/chatterbox_repo:/app",
    "FLASK_APP": "app.py",
    "PORT": "5000"
  },
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --workers 1 --threads 8 --timeout 120 -b 0.0.0.0:$PORT app:app",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  }
}